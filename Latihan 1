class Person:
    TITLES = ('Dr', 'Mr', 'Mrs', 'Ms')

    def __init__(self, nama, nama_belakang):
        self.nama = nama
        self.nama_belakang = nama_belakang

    def nama_lengkap(self):  # metode instance
        # objek instance dapat diakses melalui self
        return "%s %s" % (self.nama, self.nama_belakang)
        
    @property
    def nama_lengkap2(self):
        return "%s %s" % (self.nama, self.nama_belakang)

    @classmethod
    def judul_diperbolehkan_yang_dimulai_dengan(cls, dimulai_dengan):  # metode class
        # objek class atau instance dapat diakses melalui cls
        return [t for t in cls.TITLES if t.startswith(dimulai_dengan)]
    
    @staticmethod
    def judul_diperbolehkan_yang_berakhir_dengan(berakhir_dengan):  # metode statis
        # tidak ada parameter untuk objek class atau instance
        # kita harus menggunakan Person secara langsung
        return [t for t in Person.TITLES if t.endswith(berakhir_dengan)]
        
jane = Person("Jane", "Smith")

print(jane.nama_lengkap())
print(jane.nama_lengkap2)  # tanpa tanda kurung!

print(jane.judul_diperbolehkan_yang_dimulai_dengan("M"))
print(Person.judul_diperbolehkan_yang_dimulai_dengan("M"))

print(jane.judul_diperbolehkan_yang_berakhir_dengan("s"))
print(Person.judul_diperbolehkan_yang_berakhir_dengan("s"))
